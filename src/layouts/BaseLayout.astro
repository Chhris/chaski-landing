---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/global/Navigation.astro";
import Footer from "../components/global/Footer.astro";
---
<html
  lang="en"
  class="scroll-smooth selection:bg-accent-500 selection:text-white no-touchevents hydrated"
>
  <head>
    <BaseHead />
    <script data-host="https://app.microanalytics.io" data-dnt="false" src="https://app.microanalytics.io/js/script.js" id="ZwSg9rf6GA" async defer></script>
      <!-- HTML Meta Tags -->
    <title>Chaski APP</title>
    <meta name="description" content="A beautifully designed, privacy-focused feed reader that keeps you updated.">

    <!-- Open Graph Meta Tags -->
    <meta property="og:url" content="http://chaski.a-chacon.com">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Chaski: A Feed Reader APP">
    <meta property="og:description" content="A beautifully designed, privacy-focused feed reader that keeps you updated.">
    <meta property="og:image" content="https://chaski.a-chacon.com/today.png">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="chaski.a-chacon.com">
    <meta property="twitter:url" content="http://chaski.a-chacon.com">
    <meta name="twitter:title" content="Chaski: A Feed Reader APP">
    <meta name="twitter:description" content="A beautifully designed, privacy-focused feed reader that keeps you updated.">
    <meta name="twitter:image" content="https://chaski.a-chacon.com/today.png">

    <!-- Meta Tags Generated via https://opengraph.dev -->
  </head>
  <body class="bg-white flex flex-col min-h-svh">
    <Navigation/>
    <main class="grow"><slot /></main>
    <Footer/>
  </body>
</html>
